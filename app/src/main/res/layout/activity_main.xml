<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                    android:layout_span="4"
                    android:layout_width="match_parent" android:gravity="right"
                    android:layout_height="170dp" android:id="@+id/formula" android:layout_weight="1"
                    android:textSize="36sp"/>
        </TableRow>
        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <Button
                    android:text="C"
                    android:layout_weight="1"
                    android:id="@+id/clear" android:textSize="18sp" android:layout_height="60dp"/>
            <Button
                    android:text="*/-"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp" android:id="@+id/sign" android:textSize="18sp"
                    android:layout_weight="1"/>
            <Button
                    android:text="%"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp" android:id="@+id/percent" android:textSize="18sp"
                    android:layout_weight="1"/>
            <Button
                    android:text="DEL"
                    android:layout_width="101dp"
                    android:layout_height="60dp" android:id="@+id/delete" android:textSize="18sp"
                    android:layout_weight="1"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
            <Button
                    android:text="7"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp" android:id="@+id/num7" android:textSize="18sp"
                    android:layout_weight="1"/>
            <Button
                    android:text="8"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp" android:id="@+id/num8" android:textSize="18sp"
                    android:layout_weight="1"/>
            <Button
                    android:text="9"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp" android:id="@+id/num9" android:textSize="18sp"
                    android:layout_weight="1"/>
            <Button
                    android:text="/"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp" android:id="@+id/divide" android:textSize="18sp"
                    android:layout_weight="1"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
            <Button
                    android:text="4"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp" android:id="@+id/num4" android:textSize="18sp"
                    android:layout_weight="1"/>
            <Button
                    android:text="5"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp" android:id="@+id/num5" android:textSize="18sp"
                    android:layout_weight="1"/>
            <Button
                    android:text="6"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp" android:id="@+id/num6" android:textSize="18sp"
                    android:layout_weight="1"/>
            <Button
                    android:text="*"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp" android:id="@+id/multiply" android:textSize="18sp"
                    android:layout_weight="1"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
            <Button
                    android:text="1"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp" android:id="@+id/num1" android:textSize="18sp"
                    android:layout_weight="1"/>
            <Button
                    android:text="2"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp" android:id="@+id/num2" android:textSize="18sp"
                    android:layout_weight="1"/>
            <Button
                    android:text="3"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp" android:id="@+id/num3" android:textSize="18sp"
                    android:layout_weight="1"/>
            <Button
                    android:text="-"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp" android:id="@+id/subtract" android:textSize="18sp"
                    android:layout_weight="1"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
            <Button
                    android:text="0"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp" android:id="@+id/num0" android:textSize="18sp"
                    android:layout_weight="1"/>
            <Button
                    android:text="."
                    android:layout_width="wrap_content"
                    android:layout_height="60dp" android:id="@+id/point" android:textSize="18sp"
                    android:layout_weight="1"/>
            <Button
                    android:text="="
                    android:layout_width="wrap_content"
                    android:layout_height="60dp" android:id="@+id/equal" android:textSize="18sp"
                    android:layout_weight="1"/>
            <Button
                    android:text="+"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp" android:id="@+id/add" android:textSize="18sp"
                    android:layout_weight="1"/>
        </TableRow>
    </TableLayout>
</android.support.constraint.ConstraintLayout>